{
  "name": "peer-to-peer",
  "scripts": {
    "dev:server": "bun --watch run ./server/server.ts",
    "start:server": "bun run ./server/server.ts",
    "build:client": "bun build ./client/client.ts --outdir ./client",
    "dev:client": "bun build --watch ./client/client.ts --outdir ./client"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "zod": "3.23.8"
  }
}
